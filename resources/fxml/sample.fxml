<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<BorderPane xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ba.unsa.etf.rs.tut2zad3.Controller">
   <center>
      <GridPane alignment="center" hgap="10" vgap="10">
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" />
         </rowConstraints>
         <columnConstraints>
            <ColumnConstraints minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints minWidth="10.0" prefWidth="200.0" />
            <ColumnConstraints minWidth="10.0" prefWidth="35.0" />
         </columnConstraints>
         <children>
            <Label text="Unesite rečenicu:" />
            <TextField GridPane.columnIndex="1" fx:id="unosRecenice"/>
            <Button mnemonicParsing="false" text="OK" GridPane.columnIndex="2" onAction="#malaUVelika" />
            <TextArea prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="ispisRecenice"/>
            <Label text="Nakon izmjene:" GridPane.rowIndex="1" />
         </children>
      </GridPane>
   </center>
</BorderPane>
